generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id            Int      @id @default(autoincrement())
  type          String
  amount        Float
  category      String
  description   String?
  date          DateTime
  paymentMethod String?
  commission    Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}